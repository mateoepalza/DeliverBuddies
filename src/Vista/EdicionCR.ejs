<% include facciones/header %>

<div class="container">
  <h1>EDICIÃ“N RUTAS ASIGNADAS</h1>
  <div class="cardMP-form">
    <form id="form-send" action="<%= data.idConductorRuta %>" method="POST">
      <p>Fecha de Inicio</p>
      <div class="form-group">
        <input type="date" name="fechaInicio" value="<%= data.fechaInicio %>" class="form-control" data-tipo="date" required>
      </div>
      <p>Fecha de Finalizacion</p>
      <div class="form-group">
        <input type="date" name="fechaFin" value="<%= data.fechaFin %>" class="form-control" data-tipo="date" required>
      </div>
      <p>Conductor</p>
      <div class="form-group">
        <select name="FK_idConductor" class="form-control" required>
          <option value="" disabled> Seleccione el conductor </option>
          <% for(let i = 0; i < conductores.length; i++){ %>
            <% if(data.FK_idConductor === conductores[i].idConductor){ %>
              <option value="<%= conductores[i].idConductor%>" selected><%= conductores[i].idConductor%> - <%= conductores[i].nombre%></option>
            <% }else{ %>
              <option value="<%= conductores[i].idConductor%>"><%= conductores[i].idConductor%> - <%= conductores[i].nombre%></option>
            <% } %>
          <% } %>
        </select>
      </div>
      <p>Ruta</p>
      <div class="form-group">
        <select name="FK_idRuta" class="form-control" required>
          <option value="" disabled> Seleccione la ruta </option>
          <% for(let i = 0; i < rutas.length; i++){ %>
            <% if(data.FK_idRuta === rutas[i].idRuta){ %>
              <option value="<%= rutas[i].idRuta%>" selected><%= rutas[i].idRuta %> - <%=rutas[i].nombre%></option>
            <% }else{ %>
                <option value="<%= rutas[i].idRuta%>"><%= rutas[i].idRuta %> - <%=rutas[i].nombre%></option>
            <% } %>
          <% } %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">
        Confirmar Cambios
      </button>
    </form>
  </div>
</div>

<% include facciones/footer %>

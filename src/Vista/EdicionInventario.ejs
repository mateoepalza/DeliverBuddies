<% include facciones/header %>
<div class="container">
    <div class="row ">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                  <form id="form-send" action="" method="POST">
                      <div class="form-group">
                        <p>Producto</p>
                        <input type="text" value="<%= data.nombre%>" class="form-control" disabled>
                      </div>
                      <div class="form-group">
                        <p>Cantidad</p>
                          <input type="text" name="cantidad" value="<%= data.cantidad %>" placeholder="Cantidad" class="form-control">
                      </div>
                      <div class="form-group">
                        <p>Estante</p>
                        <select name="FK_idBodega" class="form-control">
                        <% for(let i = 0; i < bodega.length; i++){ %>
                          <% if(bodega[i].idBodega === data.FK_idBodega){%>
                          <option value="<%= bodega[i].idBodega%>" selected><%= bodega[i].estante%></option>
                          <% }else{%>
                            <option value="<%= bodega[i].idBodega%>"><%= bodega[i].estante%></option>
                          <% } %>
                        <% } %>
                        </select>
                      </div>
                      <button type="submit" class="btn btn-primary">
                          Actualizar Inventario
                      </button>
                  </form>
                </div>
            </div>
        </div>
    </div>

</div>



<% include facciones/footer %>
